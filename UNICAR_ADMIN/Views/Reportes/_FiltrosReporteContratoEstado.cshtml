@*  _FiltroReporteContratos.cshtml  *@

<style>
    /* solo para esta partial — evita sobrescribir globales */
    .rpt-label {
        font-weight: 600;
        font-size: .9rem;
    }

    .rpt-card {
        border-radius: 1rem;
    }

    .rpt-btn-lg {
        padding: .55rem 1.25rem;
        font-size: .95rem;
    }
</style>

<div class="card shadow-sm rpt-card">
    <div class="card-body">

        <form id="frmFiltros">

            <!-- ===== Campos ===== -->
            <div class="row g-3">

                <!-- Estado -->
                <div class="col-12 col-md-4">
                    <label class="rpt-label mb-1">Estado</label>
                    <select id="Estado" class="form-select form-select-sm">
                        <option value="Activo" selected>Activo</option>
                        <option value="Finalizado">Finalizado</option>
                        <option value="EnMora">En mora</option>
                        <option value="Cancelado">Cancelado</option>
                    </select>
                </div>

                <!-- Desde -->
                <div class="col-12 col-md-4">
                    <label class="rpt-label mb-1">Desde</label>
                    <input type="date" id="FechaInicio" class="form-control form-control-sm">
                </div>

                <!-- Hasta -->
                <div class="col-12 col-md-4">
                    <label class="rpt-label mb-1">Hasta</label>
                    <input type="date" id="FechaFin" class="form-control form-control-sm">
                </div>

            </div><!-- /row -->
            <!-- ===== Acciones ===== -->
            <div class="d-flex flex-column flex-md-row gap-2 justify-content-md-end mt-4">

                <button type="button" id="btnVisualizar"
                        class="btn btn-primary rpt-btn-lg d-flex align-items-center gap-1">
                    <i class="bi bi-eye"></i> Visualizar
                </button>

                <div class="dropdown">
                    <button class="btn btn-outline-secondary rpt-btn-lg dropdown-toggle d-flex align-items-center gap-1"
                            data-bs-toggle="dropdown">
                        <i class="bi bi-download"></i> Exportar
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="#" id="btnExcel" class="dropdown-item">
                                <i class="bi bi-file-earmark-excel-fill text-success me-2"></i> Excel (.xlsx)
                            </a>
                        </li>
                        <li>
                            <a href="#" id="btnPdf" class="dropdown-item">
                                <i class="bi bi-file-earmark-pdf-fill text-danger me-2"></i> PDF (.pdf)
                            </a>
                        </li>
                    </ul>
                </div>

            </div><!-- /acciones -->
        </form>

    </div>
</div>
