@model UNICAR_ADMIN.Models.DTOS.Reportes.FiltroContratosEstadoDto
@{
    Layout = null;
    var hoy = DateTime.Now;
    var rango = (Model.FechaInicio.HasValue || Model.FechaFin.HasValue)
               ? $"({Model.FechaInicio:dd/MM/yyyy} – {Model.FechaFin:dd/MM/yyyy})"
               : "(todas las fechas)";
}
<header style="display:flex;align-items:center;justify-content:space-between;padding:1rem 2rem;background:#1e1f3b;color:#fff;">
    <!-- Logo izquierda -->
    <div class="header-logo">
        <img src="~/logo_unicar_Blanco.jpg" alt="UNICAR" style="height:80px;display:block;" />
    </div>


    <!-- Centro: Título y subtítulo/rango -->
    <div class="header-center" style="flex:1;text-align:center;">
        <h1 style="margin:0;font-size:2.2rem;font-weight:800;">Reporte de Contratos por Estado</h1>
        <p style="margin:0;font-size:1.15rem;opacity:.9;">
            Estado: <strong>@Model.Estado</strong> @rango
        </p>
    </div>

    <!-- Derecha: Fecha -->
    <div class="header-date" style="text-align:right;min-width:180px;opacity:.9;">
        <p style="margin:0;">Generado el <strong>@hoy.ToString("dd/MM/yyyy")</strong></p>
        
    </div>
</header>
