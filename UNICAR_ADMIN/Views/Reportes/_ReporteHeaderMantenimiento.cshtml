@model UNICAR_ADMIN.Models.DTOS.Reportes.ReporteVehiculoMantenimientosViewModel
@using System.Globalization

@{
    Layout = null;
    var hoy = DateTime.Now;
    var rango = $"({Model.fechaInicial:dd/MM/yyyy} – {Model.fechaFinal:dd/MM/yyyy})";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        html, body {
            margin: 0;
            padding: 0;
            font-family: "Segoe UI", sans-serif;
        }

        header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 2rem;
            background: #1e1f3b;
            color: #fff;
            box-sizing: border-box;
        }

        /* Logo en la izquierda */
        .header-logo {
            flex: 0 0 auto;
        }

            /* .header-logo .logo-box {
                background: #fff;
                padding: 0.5rem;
                border-radius: 8px;
                box-shadow: 0 2px 6px rgba(0,0,0,0.15);
                display: inline-block;
            } */

            .header-logo img {
                height: 80px;
                width: auto;
                display: block;
            }

        /* Contenedor central */
        .header-center {
            flex: 1 1 auto;
            text-align: center;
            padding: 0 2rem;
            line-height: 1.4;
        }

            .header-center h1 {
                margin: 0 0 .5rem;
                font-size: 1.75rem;
                font-weight: 800;
            }

            .header-center p {
                margin: .25rem 0;
                font-size: 1rem;
                opacity: .9;
            }

                .header-center p strong {
                    color: #fff;
                }

        /* Fecha a la derecha */
        .header-date {
            flex: 0 0 auto;
            text-align: right;
            font-size: 1rem;
            opacity: .9;
            min-width: 200px;
        }
    </style>
</head>
<body>
    <header>
        <!-- LOGO IZQUIERDA -->
           <div class="header-logo">
            <div class="logo-box">
                <img src="@Url.Content("~/logo_unicar_Blanco.jpg")" alt="UNICAR" style="height:80px; display:block;" />
            </div>
        </div>

    
     
        <!-- TEXTO CENTRAL -->
        <div class="header-center">
            <h1>Reporte de Mantenimientos y Reparaciones</h1>
            <p>Periodo entre: <strong>@rango</strong></p>

        </div>

        <!-- FECHA DERECHA -->
        <div class="header-date">
            <p>Emitido el <strong>@hoy.ToString("dd/MM/yyyy")</strong></p>

        </div>
    </header>

    <!-- Aquí va el resto del body... -->

</body>
</html>