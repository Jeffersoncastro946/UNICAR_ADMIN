@model UNICAR_ADMIN.Models.DTOS.ReparacionesDTO
@{
    ViewData["Title"] = "Registrar Reparación";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}


@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var kvp in ViewData.ModelState)
            {
                foreach (var error in kvp.Value.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<div class="container py-4">

    <!-- Título + Volver -->
    <!-- Título + botón Volver -->
    <div class="row mb-4 align-items-center">
        <div class="col-md-1 d-none d-md-block"><!-- hueco lateral --></div>

        <!-- Título centrado -->
        <div class="col-6 col-md-8 text-center">
            <h3 class="mb-0">Registrar Reparación de Vehículo</h3>
        </div>

        <!-- Botón a la derecha -->
        <div class="col-6 col-md-2 text-center">
            <a asp-action="ListarReparaciones" asp-controller="Vehiculo" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Volver al listado
            </a>
        </div>
    </div>

    <!-- Card con scroll interno si hiciera falta -->
    <div class="card shadow-lg rounded-4 bg-white w-100 card-form mx-auto"
         style="max-width: 900px; max-height: calc(100vh - 6rem); overflow-y: auto;">

        <div class="card-body">
            <form asp-action="CrearReparacion"
                  asp-controller="Vehiculo"
                  enctype="multipart/form-data">

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="row g-3">

                    <!-- 1. Vehículo -->
                    <div class="col-md-6">
                        <label asp-for="VehiculoId" class="form-label">Vehículo (VIN)</label>
                        <select asp-for="VehiculoId" asp-items="Model.ListaVehiculosVin"
                                class="form-select">
                            <option value="">Seleccione un vehículo</option>
                        </select>
                        <span asp-validation-for="VehiculoId" class="text-danger small"></span>
                    </div>

                    <!-- 2. Costo -->
                    <div class="col-md-6">
                        <label asp-for="Costo" class="form-label">Costo (L)</label>
                        <input asp-for="Costo" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="Costo" class="text-danger small"></span>
                    </div>

                    <!-- 3. Fechas -->
                    <div class="col-md-6">
                        <label asp-for="FechaInicio" class="form-label">Fecha inicio</label>
                        <input asp-for="FechaInicio" type="date" class="form-control" />
                        <span asp-validation-for="FechaInicio" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="FechaFin" class="form-label">Fecha fin</label>
                        <input asp-for="FechaFin" type="date" class="form-control" />
                        <span asp-validation-for="FechaFin" class="text-danger small"></span>
                    </div>

                    <!-- 4. Descripción -->
                    <div class="col-md-6">
                        <label asp-for="Descripcion" class="form-label">Descripción</label>
                        <textarea asp-for="Descripcion" rows="3" class="form-control"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger small"></span>
                    </div>

                    <!-- 5. Responsable -->
                    <div class="col-md-6">
                        <label asp-for="Responsable" class="form-label">Responsable</label>
                        <textarea asp-for="Responsable" rows="3" class="form-control"></textarea>
                        <span asp-validation-for="Responsable" class="text-danger small"></span>
                    </div>
@* 
                    <!-- 6. Foto -->
                    <div class="col-12">
                        <label asp-for="ImagenFile" class="form-label">Foto de la reparación</label>
                        <input asp-for="ImagenFile" type="file" class="form-control" />
                    </div> *@

                    <div class="col-12">
                        <label asp-for="ImagenFile"></label>
                        <input asp-for="ImagenFile" class="form-control" type="file" />
                        <div class="mt-2">
                            <img id="preview-FotoFrontal"
                                 src="@(Model.ImagenUrl != null ? Url.Content(Model.ImagenUrl) : "#")"
                                 class="img-thumbnail"
                                 style="max-width:200px; display:@(Model.ImagenUrl != null ? "block" : "none");" />
                        </div>
                    </div>

                </div>

                <div class="text-end mt-4">
                    <button class="btn btn-outline-success rounded-pill px-4">
                        <i class="bi bi-save me-1"></i> Guardar Reparación
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
   <script>
      $(document).ready(function() {
          $('#VehiculoId').select2(
          {
                allowClear: true,
                      width: '100%',
          } );
      });
   </script>
}