@model UNICAR_ADMIN.Models.DTOS.ReparacionesDTO

<div class="text-center py-4">
    <!-- Icono grande de “peligro” -->
    <i class="bi bi-exclamation-triangle-fill fs-1 text-danger mb-3"></i>

    <!-- Mensaje -->
    <p class="fs-5">
        ¿Estás seguro de que quieres <strong>eliminar</strong><br />
        la reparacion <em>@Model.Descripcion</em> para el vehículo <em>@Model.Marca @Model.Modelo</em><br />
        <small>(VIN: <code>@Model.Vin</code>)</small>?
    </p>

    <!-- Botones dentro del body -->
    <div class="mt-4">
        <form id="formEliminarReparacion" asp-action="BorrarReparacion" enctype="multipart/form-data" method="post" class="d-inline">
            <input type="hidden" asp-for="ReparacionId" />
            <button type="submit" class="btn btn-lg btn-danger me-2">
                <i class="bi bi-trash me-1"></i> Eliminar
            </button>
        </form>
        <button type="button"
                class="btn btn-lg btn-outline-secondary"
                data-bs-dismiss="modal">
            Cancelar
        </button>
    </div>
</div>
