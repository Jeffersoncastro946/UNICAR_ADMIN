@model UNICAR_ADMIN.Models.DTOS.CrearVehiculoDTO

<label asp-for="ProveedorId"></label>
<select asp-for="ProveedorId"
        asp-items="Model.ListaProveedores"
        id="ProveedorId"
        class="form-select form-control"
        data-selected-id="@Model.ProveedorId">
</select>

<!-- 2) Campos de datos del proveedor (ahora siempre visibles) -->
<div id="contenedorDatosProveedor">
    <div class="mb-2">
        <label class="form-label">Nombre:</label>
        <input type="text" id="txtNombreProv" class="form-control" readonly placeholder="Aquí aparecerá el nombre del proveedor" />
    </div>
    <div class="row mb-2">
        <div class="col">
            <label class="form-label">Teléfono:</label>
            <input type="text" id="txtTelefonoProv" class="form-control" readonly placeholder="Aquí aparecerá el teléfono" />
        </div>
        <div class="col">
            <label class="form-label">Correo:</label>
            <input type="text" id="txtCorreoProv" class="form-control" readonly placeholder="Aquí aparecerá el correo" />
        </div>
    </div>
    <div class="mb-2">
        <label class="form-label">Dirección:</label>
        <textarea id="txtDireccionProv" class="form-control" rows="2" readonly placeholder="Aquí aparecerá la dirección"></textarea>
    </div>
</div>



<!-- Botón de envío -->
<div class="text-end mt-4">
    <button type="submit" class="btn btn-outline-success rounded-pill px-4">
        <i class="bi bi-save me-1"></i> Guardar Vehículo
    </button>
</div>
