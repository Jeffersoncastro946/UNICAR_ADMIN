@model UNICAR_ADMIN.Models.DTOS.ContratoDto;


<div class="card shadow-lg rounded-4 p-4 bg-white w-100" style="max-width: 700px;">


    <form asp-action="editar" asp-controller="Contrato" method="post" id="FormEditarContrato" class="row g-3">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        
        <input type="hidden" asp-for="ContratoId"/>
        <div class="col-md-6">
            <label asp-for="ClienteId" class="form-label">Cliente</label>
            <select asp-for="ClienteId" asp-items="Model.ListaCliente" class="form-select" disabled >
                <option disabled selected>-- Seleccionar Cliente --</option>
            </select>
            <input type="hidden" asp-for="ClienteId" value="@Model.ClienteId">
            <span asp-validation-for="ClienteId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="VendedorId" class="form-label">Vendedor</label>
            <select asp-for="VendedorId" asp-items="Model.ListaVendedor" class="form-select" >
                <option disabled selected>-- Seleccionar Vendedor --</option>
            </select>
            <span asp-validation-for="VendedorId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="VehiculoId" class="form-label">Vehículo</label>
            <select asp-for="VehiculoId" asp-items="Model.ListaVehiculo" class="form-select" disabled>
               
                
            </select>
            <input type="hidden" asp-for="VehiculoId" value="@Model.VehiculoId">
            <span asp-validation-for="VehiculoId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="TipoVenta" class="form-label">Tipo de Venta</label>
            <select asp-for="TipoVenta" asp-items="Model.ListaTipoVenta" class="form-select" >
                <option disabled >-- Seleccionar Tipo de Venta --</option>
            </select>
            <span asp-validation-for="TipoVenta" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="FechaVenta" class="form-label"></label>
            <input asp-for="FechaVenta" type="date" class="form-control"  />
            <span asp-validation-for="FechaVenta" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="PrecioVenta" class="form-label"></label>
            <input asp-for="PrecioVenta" class="form-control" />
            <span asp-validation-for="PrecioVenta" class="text-danger"></span>
        </div>
        <div class="col-md-6 campo-financiamiento">
            <label asp-for="PlazoMeses" class="form-label">Plazo (meses)</label>
            <select asp-for="PlazoMeses" asp-items="@Model.ListaPlazos">
                <option disabled >-- Seleccionar Plazo --</option>
            </select>
        </div>
        <div class="col-md-6 campo-financiamiento">
            <label asp-for="TasaAnual" class="form-label">Tasa Anual (%)</label>
            <select asp-for="TasaAnual" asp-items="@Model.ListaTasa">
                <option value="" disabled>-- Seleccionar Tasa --</option>
            </select>
        </div>

        <div class="col-md-6">
            <label asp-for="EstadoContrato" class="form-label">Estado Del Contrato</label>
            <select asp-for="EstadoContrato" asp-items="@Model.ListarEstadosContrato">
                <option value="" disabled>-- Seleccionar Tasa --</option>
            </select>
        </div>

        <div class="col-md-6 campo-financiamiento">
            <label asp-for="CuotaMensual" class="form-label">Cuota Mensual</label>
            <input asp-for="CuotaMensual" class="form-control" id="CuotaMensual" readonly />
        </div>




        <div class="col-12 text-end">
            <button type="submit" class="btn btn-outline-success">
                <i class="bi bi-save"></i> Guardar Contrato
            </button>
        </div>
    </form>
</div>
