@model IEnumerable<UNICAR_ADMIN.Models.DTOS.ListaVehiculoDTO>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-4">
    @foreach (var vehiculo in Model)
    {
        <div class="card mb-4 shadow-sm border-0">
            <div class="row g-0 align-items-center">
                <!-- Imagen -->
                <div class="col-md-4">
                    <img src="@vehiculo.Miniatura" class="img-fluid rounded-start w-100" alt="Imagen del vehículo" style="height: 200px; object-fit: cover;">
                </div>

                <!-- Contenido -->
                <div class="col-md-6">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-car-front"></i> @vehiculo.Marca @vehiculo.Modelo
                        </h5>
                        <div class="row">
                            <div class="col-6 mb-2">
                                <i class="bi bi-calendar3 text-primary"></i> <strong>Año:</strong> @vehiculo.Anio
                            </div>
                            <div class="col-6 mb-2">
                                <i class="bi bi-palette text-info"></i> <strong>Color:</strong> @vehiculo.Color
                            </div>
                            <div class="col-6 mb-2">
                                <i class="bi bi-check-circle @GetEstadoColor(vehiculo.Estado)"></i>
                                <strong>Estado:</strong> @vehiculo.Estado
                            </div>
                            <div class="col-6 mb-2">
                                <i class="bi bi-currency-dollar text-dark"></i>
                                <strong>Precio:</strong> <span class="fw-bold text-success">L. @vehiculo.Precio.ToString("N2")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Botón en columna separada -->
                <div class="col-md-2 text-center">
                    <button class="btn btn-outline-primary mt-4 px-4 btnVerMas"
                            data-id="@vehiculo.VehiculoId">
                        Ver más
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@functions{
    string GetEstadoColor(string? estado)
    {
        return estado switch
        {
            "Disponible" => "text-success",       // verde
            "En reparación" => "text-warning",    // amarillo
            "Vendido" => "text-danger",           // rojo
            _ => "text-secondary"                 // gris por defecto
        };
    }


}

@section Scripts {
    <script>
        $(document).ready(function () {
            // click para abririr modal
             $(".btnVerMas").on("click", function (e) {
                e.preventDefault();
                var vehiculoId = $(this).data("id");
                console.log(vehiculoId);
                // var url = "/Home/DetalleVehiculo?id=" + vehId
                 var url = "/Home/DetalleVehiculo?idVehiculo=" + vehiculoId;
                 console.log(url)
                abrirModal("lg", "Detalle Vehiculo", url);
            });
        });
    </script>
}
